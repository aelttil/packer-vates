# XCP-ng credentials
# Copy this file to credentials.auto.pkrvars.hcl and update with your values

# XCP-ng connection details
remote_host     = "your-xcpng-host-ip-or-hostname"
remote_username = "root"
remote_password = "your-xcpng-password"

# Storage details
sr_iso_name     = "isos"
sr_name         = "your-storage-repository-name"

# Network details
network_name    = "your-network-name"

# SSH credentials for provisioning
ssh_username    = "debian"
ssh_password    = "debian"
